{
  "name": "better-navigation",
  "displayName": "Better Navigation",
  "description": "Better Navigation View (Extracted)",
  "version": "1.0.0",
  "publisher": "user",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:better-navigation.find",
    "onCommand:editor.action.showReferences"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "better-navigation.preferredLocation": {
          "description": "Controls where 'Find References' results are displayed.",
          "type": "string",
          "default": "peek",
          "enum": [
            "peek",
            "view"
          ],
          "enumDescriptions": [
            "Show references in a peek editor.",
            "Show references in a separate view."
          ]
        },
        "better-navigation.tabViewType": {
          "description": "Controls how multiple search tabs are displayed.",
          "type": "string",
          "default": "visual",
          "enum": [
            "visual",
            "quickpick"
          ],
          "enumDescriptions": [
            "Show tabs as a visual tab bar.",
            "Show tabs in a quickpick menu accessed from the view title."
          ]
        },
        "better-navigation.groupByDirectory": {
          "description": "Controls whether to group search results by directory structure.",
          "type": "boolean",
          "default": true
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "better-navigation",
          "title": "Better Navigation",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "better-navigation": [
        {
          "id": "better-navigation.tabs",
          "name": "Tabs",
          "when": "better-navigation.hasSearches && better-navigation.showVisualTabs",
          "type": "webview",
          "initialSize": 1
        },
        {
          "id": "better-navigation.tree",
          "name": "Better Navigation",
          "when": "better-navigation.hasSearches",
          "initialSize": 100
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "better-navigation.tree",
        "contents": "$(loading~spin) Loading results..."
      }
    ],
    "commands": [
      {
        "command": "better-navigation.findReferences",
        "title": "Find References",
        "category": "Better Navigation"
      },
      {
        "command": "better-navigation.showSupertypes",
        "title": "Show Supertypes",
        "category": "Types",
        "icon": "$(type-hierarchy-super)"
      },
      {
        "command": "better-navigation.showSubtypes",
        "title": "Show Subtypes",
        "category": "Types",
        "icon": "$(type-hierarchy-sub)"
      },
      {
        "command": "better-navigation.enableDirectoryGrouping",
        "title": "View as Tree",
        "category": "Better Navigation",
        "icon": "$(list-flat)"
      },
      {
        "command": "better-navigation.disableDirectoryGrouping",
        "title": "View as List",
        "category": "Better Navigation",
        "icon": "$(list-tree)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "better-navigation.findReferences",
          "when": "editorHasReferenceProvider",
          "group": "0_navigation@1"
        },
        {
          "command": "better-navigation.showSupertypes",
          "when": "editorHasTypeHierarchyProvider",
          "group": "0_navigation@4"
        },
        {
          "command": "better-navigation.showSubtypes",
          "when": "editorHasTypeHierarchyProvider",
          "group": "0_navigation@5"
        }
      ],
      "view/title": [
        {
          "command": "better-navigation.disableDirectoryGrouping",
          "when": "view == 'better-navigation.tree' && config.better-navigation.groupByDirectory",
          "group": "navigation@1"
        },
        {
          "command": "better-navigation.enableDirectoryGrouping",
          "when": "view == 'better-navigation.tree' && !config.better-navigation.groupByDirectory",
          "group": "navigation@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "better-navigation.findReferences",
        "when": "editorHasReferenceProvider",
        "key": "shift+alt+f12"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.0.0"
  }
}
